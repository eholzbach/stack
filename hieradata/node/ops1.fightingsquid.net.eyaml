classes:
  - grafana
  - nginx
  - nrpe::services::graphite
  - nrpe::services::nginx
  - ops_firewall

grafana::cfg:
  server:
    http_addr:       127.0.0.1
    http_port:       3001
  security:
    admin_user:      ENC[PKCS7,]
    admin_password:  ENC[PKCS7,]
  users:
    allow_sign_up:   false
  auth.anonymous:
    enabled:         true

nginx::nginx_vhosts:
  'graphite':
    server_name:
      - ops1.fightingsquid.net
      - graphite.fightingsquid.net
    listen_port:           80
    access_log:            'off'
    error_log:             'off'
    client_max_body_size:  64m
    proxy:                 'http://unix:/var/run/graphite.sock:/'
    proxy_read_timeout:    10s
    proxy_connect_timeout: 10s
    location_cfg_append:
      proxy_set_header:
        - Host $http_host
        - X-Real-IP $remote_addr
      proxy_pass_header:
        - Server
  'grafana.fightingsquid.net':
    index_files: []
    listen_port:           80
    access_log:            'off'
    error_log:             'off'
    proxy:                 http://localhost:3001
    proxy_redirect:        'http://localhost:3001 /'

nginx::nginx_locations:
  'status':
    location:    /nginx_status
    location_allow:
      - 127.0.0.1
    location_deny:
      - all
    stub_status: true
    vhost:       graphite 
  'static':
    location:    '^~ /static/'
    index_files: []
    www_root:    '/usr/share/pyshared/django/contrib/admin'
    vhost:       graphite
  'content':
    location:    '^~ /content/'
    index_files: []
    www_root:    '/opt/graphite/webapp'
    vhost:       graphite

ops_firewall::rules:
  '50 allow all to graphite web':
    port:
      - 80
      - 443
      - 3000
    proto:  tcp
    action: accept
  '51 allow to carbon':
    port:
      - 2003
      - 2004
      - 7002
    proto:  tcp
    source: ENC[PKCS7,]
    action: accept
  '52 allow to carbon':
    port:
      - 2003
      - 2004
      - 7002
    proto:  tcp
    source: ENC[PKCS7,]
    action: accept
  '53 allow to carbon':
    port:
      - 2003
